<center>
<div class="user form">
  
<%= form_for :session, url: login_path,  class:"form-group" do |f| %>
 
   <div class="col">
  <%= octicon "mail", :color => "light" %> Email: <%= f.text_field :email, class: "form-control" %><br/>
  </div>
   <div class="col">
   <%= octicon "lock" %>
  Password: <%=f.text_field    :password, class:"form-control", type: "password" %>
  </div>
  <br>
  Remeber me  
  <%= f.check_box :remember %>
  
   <br> <br>
   
  <%= f.submit value:"Login", class:"btn btn-dark" %>
   
  
<% end %>
</div>
</center>