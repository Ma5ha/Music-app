<p>Find me in app/views/sessions/new.html.erb</p>
<center>
<div class="user form">
  
<%= form_for @user, url: login_path,  class:"form-group" do |f| %>
 
   <div class="col">
  <%= octicon "mail", :color => "light" %> Email: <%= f.text_field :email, class: "form-control" %><br/>
  </div>
   <div class="col">
   <%= octicon "lock" %>
  Password: <%=f.text_field    :password, class:"form-control", type: "password" %>
  </div>
   
  <%= f.submit class:"btn btn-dark"%>

<% end %>
</div>
</center>