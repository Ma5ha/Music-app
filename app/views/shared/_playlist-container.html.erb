
<% @playlist.each do |playlist| %>
  

  





<ul class="list-group">
  <li class="list-group-item d-flex justify-content-between align-items-center">
   <%=playlist.name%>
   <div class="float-right">
      <span > <%= button_to "x", { controller:"play_lists", action: "destroy", id: playlist.id },
                                method: :delete, data: { confirm: "Are you sure?" }, class: "close" %> </span>
  
</div>
   
   
    <span class="badge badge-primary badge-pill"><%=playlist.songs.length%></span>
    
  </li>
  
</ul>




<% end %>