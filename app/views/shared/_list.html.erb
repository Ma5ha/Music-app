
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#PlaylistCreate">
  Create playlist
</button>



<div class="modal fade" id="PlaylistCreate" tabindex="-1" role="dialog" aria-labelledby="PlaylistCreateLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="PlaylistCreate">Create playlist</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
          

        </button>
      </div>
      <div class="modal-body">
        <%=form_for :playlist, url: playlist_create_path,class:"createPlaylist", remote:true do |f| %>
        <%=f.text_field :name, class:"form-control form-control-lg" %>
        <%end%>
      </div>
      
    </div>
  </div>
</div>
