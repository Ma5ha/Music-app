function addplaylist() {   
    $(".listUpdate").html("<%= j(render 'shared/playlist-container', object: @playlist=@user.playlists.all )%>");
   flash()
   removeFlash()
   
   };
function flash() {   
    $('.flash').html("<%= j(render 'users/flash', locals: {flash: flash[:playlist]} )%>");
    
}

function removeFlash() {
    $('#flash').fadeOut(2000);
}
    
$(".createPlaylist").bind('ajax:success', addplaylist())
